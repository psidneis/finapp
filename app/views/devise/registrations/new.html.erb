<div class='login-container'>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-4 col-sm-offset-4'>
        <h2 class='text-center title'><%= t('breadcrumbs.pages.sign_up') %></h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'validate-form') do |f| %>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= f.input_field :name, required: true, autofocus: true, label: false, placeholder: t('activerecord.attributes.user.name'), class: 'form-control' %>
            </div>
          </div>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= f.input_field :email, required: true, label: false, placeholder: t('activerecord.attributes.user.email'), class: 'form-control' %>
            </div>
          </div>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= f.input_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), label: false, placeholder: t('devise.sessions.password'), class: 'form-control' %>
            </div>
          </div>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= f.input_field :password_confirmation, required: true, label: false, placeholder: t('devise.sessions.password_confirmation'), class: 'form-control' %>
            </div>
          </div>
          <%= f.button :submit, t('devise.registrations.sign_up'), class: 'btn btn-block' %>
        <% end %>
        <div class='text-center'>
          <hr class='hr-normal'>
          <%# if devise_mapping.confirmable? && controller_name != 'confirmations' %>
            <%#= link_to t('devise.confirmations.confirmation_instructions_not_received'), new_confirmation_path(resource_name) %>
          <%# end %>
        </div>
      </div>
    </div>
  </div>
</div>








