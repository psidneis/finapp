<div class='login-container'>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-4 col-sm-offset-4'>
        <h1 class='text-center title'>Sign in</h1>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: 'validate-form') do |f| %>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= f.input_field :email, required: false, autofocus: true, label: false, placeholder: 'E-mail', class: 'form-control' %>
              <!-- <i class='icon-user text-muted'></i> -->
            </div>
          </div>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= f.input_field :password, required: false, label: false, placeholder: 'Password', class: 'form-control' %>
              <!-- <i class='icon-lock text-muted'></i> -->
            </div>
          </div>
          <div class='form-group'>
            <label for='remember_me'>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </label>
          </div>
          <%= f.button :submit, "Log in", class: 'btn btn-block' %>
          <% end %>
        <div class='text-center'>
          <hr class='hr-normal'>
          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <% end -%>
        </div>
      </div>
    </div>
  </div>
</div>
<div class='login-container-footer'>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-12'>
        <div class='text-center'>
          <% if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to(new_registration_path(resource_name)) do %>
              <i class='icon-user'></i>
              New to FinApp?
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

