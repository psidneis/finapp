<div class='login-container'>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-4 col-sm-offset-4'>
        <h2 class='text-center title'><%= t('breadcrumbs.pages.login') %></h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: 'validate-form') do |f| %>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= f.input_field :email, required: false, autofocus: true, label: false, placeholder: t('activerecord.attributes.user.email'), class: 'form-control' %>
              <i class='icon-user text-muted'></i>
            </div>
          </div>
          <div class='form-group'>
            <div class='controls with-icon-over-input'>
              <%= f.input_field :password, required: false, label: false, placeholder: t('devise.sessions.password'), class: 'form-control' %>
              <i class='icon-lock text-muted'></i>
            </div>
          </div>
          <div class='form-group'>
            <label for='remember_me'>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </label>
          </div>
          <%= f.button :submit, t('devise.sessions.sign_in'), class: 'btn btn-block' %>
        <% end %>
        <div class='text-center'>
          <hr class='hr-normal'>
          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <div class="col-md-12 social_login">
              <%= link_to user_omniauth_authorize_path(:facebook), class: "circle" do %>
                <%= image_tag "face.png", size: "14x28", alt: "FinApp" %>
              <% end %>
              <%= link_to user_omniauth_authorize_path(:twitter), class: "circle" do %>
                <%= image_tag "twt.png", size: "34x24", alt: "FinApp" %>
              <% end %>
              <%= link_to user_omniauth_authorize_path(:google_oauth2), class: "circle" do %>
                <%= image_tag "gplus.png", size: "17x27", alt: "FinApp" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
