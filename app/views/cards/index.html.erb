<%= render 'header' %>

<div class='box bordered-box green-border' style='margin-bottom:0;'>
  <div class='box-header green-background'>
    <div class='title'>Lista</div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='table' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>Brand</th>
              <th>Title</th>
              <th>Credit limit</th>
              <th>Billing day</th>
              <th>Payment day</th>
              <th>Account</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @cards.each do |card| %>
              <tr>
                <td><%= card.brand %></td>
                <td><%= card.title %></td>
                <td><%= card.credit_limit %></td>
                <td><%= card.billing_day %></td>
                <td><%= card.payment_day %></td>
                <td><%= card.account %></td>
                <td><%= link_to '<i class="icon-search"></i>'.html_safe, card %></td>
                <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_card_path(card) %></td>
                <td><%= link_to '<i class="icon-trash"></i>'.html_safe, card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>
<%= link_to 'New Card', new_card_path %>
