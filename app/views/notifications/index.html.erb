<%= render 'header' %>

<div class='box bordered-box green-border' style='margin-bottom:0;'>
  <div class='box-header green-background'>
    <div class='title'>
      <%= t('helpers.index') %>
    </div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='table' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>
                <%= Notification.human_attribute_name("title") %>
              </th>
              <th>
                <%= Notification.human_attribute_name("created_at") %>
              </th>
              <th colspan="3">
                <%= t('helpers.actions') %>
              </th>
            </tr>
          </thead>

          <tbody>
            <% @notifications.each do |notification| %>
              <tr>
                <td>
                  <%= notification.title %>
                </td>
                <td><%= l(notification.created_at, format: :date_picker) %></td>
                <td><%= link_to '<i class="icon-search"></i>'.html_safe, notification %></td>
                <td><%= link_to '<i class="icon-trash"></i>'.html_safe, notification, method: :delete, data: { confirm: t('helpers.are_you_sure') } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>