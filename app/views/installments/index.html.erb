<p id="notice"><%= notice %></p>

<h1>Listing Installments</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Date</th>
      <th>Paid</th>
      <th>Number installment</th>
      <th>Launch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @installments.each do |installment| %>
      <tr>
        <td><%= installment.value %></td>
        <td><%= installment.date %></td>
        <td><%= installment.paid %></td>
        <td><%= installment.number_installment %></td>
        <td><%= installment.launch %></td>
        <td><%= link_to 'Show', installment %></td>
        <td><%= link_to 'Edit', edit_installment_path(installment) %></td>
        <td><%= link_to 'Destroy', installment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

