<%= render 'header' %>

<nav>
  <ul class="pager">
    <li class="previous"><%= link_to "<i class='icon-chevron-left'></i>".html_safe, installments_path(search_period: @search_period - 1.month) %></li>
      <span><%= l(@search_period, format: :long_month_year) %></span>
    <li class="next"><%= link_to "<i class='icon-chevron-right'></i>".html_safe, installments_path(search_period: @search_period + 1.month) %></li>
  </ul>
</nav>

<div class='box bordered-box green-border' style='margin-bottom:0;'>
  <div class='box-header green-background'>
    <div class='title'>
      <%= t('helpers.index') %>
    </div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='table' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>
                <%= Installment.human_attribute_name("value") %>
              </th>
              <th>
                <%= Installment.human_attribute_name("date") %>
              </th>
              <th>
                <%= Installment.human_attribute_name("paid") %>
              </th>
              <th>
                <%= Installment.human_attribute_name("number_installment") %>
              </th>
              <th>
                <%= Installment.human_attribute_name("launch") %>
              </th>
              <th colspan="3">
                <%= t('helpers.actions') %>
              </th>
            </tr>
          </thead>

          <tbody>
            <% @installments.each do |installment| %>
              <tr>
                <td><%= number_to_currency(installment.value) %></td>
                <td><%= l(installment.date, format: :date_picker) %></td>
                <td><%= human_boolean(installment.paid) %></td>
                <td><%= installment.number_installment %> / <%= installment.launch.amount_installment %></td>
                <td><%= installment.launch.title %></td>
                <td><%= link_to '<i class="icon-search"></i>'.html_safe, installment %></td>
                <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_installment_path(installment) %></td>
                <td><%= link_to '<i class="icon-trash"></i>'.html_safe, installment, method: :delete, data: { confirm: t('helpers.are_you_sure') } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>
<%= link_to t('helpers.titles.new', model: t("activerecord.models.installment.one")), new_installment_path %>

