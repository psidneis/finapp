<%= render 'header' %>

<div class='box bordered-box green-border' style='margin-bottom:0;'>
  <div class='box-header green-background'>
    <div class='title'>
      <%= t('helpers.index') %>
    </div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='table' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>
                <%= Launch.human_attribute_name("title") %>
              </th>
              <th>
                <%= Launch.human_attribute_name("value") %>
              </th>
              <th>
                <%= Launch.human_attribute_name("date") %>
              </th>
              <th>
                <%= Launch.human_attribute_name("paid") %>
              </th>
              <th>
                <%= Launch.human_attribute_name("recurrence") %>
              </th>
              <th>
                <%= Launch.human_attribute_name("launch_type") %>
              </th>
              <th>
                <%= Launch.human_attribute_name("category") %>
              </th>
              <th colspan="3">
                <%= t('helpers.actions') %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @launches.each do |launch| %>
              <tr>
                <td><%= launch.title %></td>
                <td><%= number_to_currency(launch.value) %></td>
                <td><%= l(launch.date) %></td>
                <td><%= human_boolean(launch.paid) %></td>
                <td><%= t("activerecord.attributes.launch.recurrences.#{launch.recurrence}") %></td>
                <td><%= t("activerecord.attributes.launch.launch_types.#{launch.launch_type}") %></td>
                <td><%= launch.category.title %></td>
                <td><%= link_to '<i class="icon-search"></i>'.html_safe, launch %></td>
                <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_launch_path(launch) %></td>
                <td><%= link_to '<i class="icon-trash"></i>'.html_safe, launch, method: :delete, data: { confirm: t('helpers.are_you_sure') } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>
<%= link_to t('helpers.titles.new', model: t("activerecord.models.launch.one")), new_launch_path %>
