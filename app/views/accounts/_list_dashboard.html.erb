<div class='row' >
  <div class='col-sm-12'>
    <div class='box'>
      <div class='box-header'>
        <div class='title'>
          <i class='icon-usd'></i>
          <%= t('activerecord.models.account.other') %>
        </div>
        <div class='actions'>
          <%= link_to "<i class='icon-plus'></i>".html_safe, new_account_path, class: 'btn btn-success  ' %>
        </div>
      </div>
      <div class='box-content'>
        <% if @accounts.present? %>
          <div class=' accounts_general'>
            <div class='pull-left'>
              <% sum_of_accounts_value = Account.sum_of_values %>
              <h4><i class='icon-chevron-down'></i> <%= t('breadcrumbs.pages.total_balance') %></h4>
            </div>
            <div class='pull-right'>
              <h3 class='subtotal <%= sum_of_accounts_value > 0 ? 'text-green' : 'text-red' %> '><%= number_to_currency(sum_of_accounts_value) %></h3>
            </div>
            <div class='clearfix'></div>
          </div>
          <div class='accounts_details' style='display:none'>
          <hr class='hr-normal'></hr>
            <div class='col-sm-12'>
              <% @accounts.each do |account| %>
                <%= link_to account do %>
                  <div class='pull-left'>
                    <h4><%= account.title %></h4>
                  </div>
                  <div class='pull-right'>
                    <h4 class='<%= account.value > 0 ? 'text-green' : 'text-red' %> '><%= number_to_currency(account.value) %></h4>  
                  </div>
                  <div class='clearfix'></div>
                <% end %>
                <hr class='dashboard-hr-account'></hr>
              <% end %>
            </div>
          </div>
        <% else %>
          Não há contas cadastradas
        <% end %>
      </div>
    </div>
  </div>
</div>
