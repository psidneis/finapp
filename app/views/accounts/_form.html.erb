<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :account_type, collection: options_for_enum(Account, :account_type, @account) %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :value %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
