<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :account_type, collection: options_for_enum(Account, :account_type, @account), include_blank: false %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :value %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
