<%= render 'header' %>

<div class='box bordered-box green-border' style='margin-bottom:0;'>
  <div class='box-header green-background'>
    <div class='title'>Lista</div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='table' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>Type</th>
              <th>Title</th>
              <th>Value</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @accounts.each do |account| %>
              <tr>
                <td><%= account.account_type %></td>
                <td><%= account.title %></td>
                <td><%= account.value %></td>
                <td><%= link_to '<i class="icon-search"></i>'.html_safe, account %></td>
                <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_account_path(account) %></td>
                <td><%= link_to '<i class="icon-trash"></i>'.html_safe, account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>
<%= link_to 'New Account', new_account_path %>
