<%= render 'header' %>

<div class='box bordered-box green-border' style='margin-bottom:0;'>
  <div class='box-header green-background'>
    <div class='title'>Lista</div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='table' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>
                <%= Account.human_attribute_name("account_type") %>
              </th>
              <th>
                <%= Account.human_attribute_name("title") %>
              </th>
              <th>
                <%= Account.human_attribute_name("value") %>
              </th>
              <th colspan="3">
                <%= t('helpers.actions') %>
              </th>
            </tr>
          </thead>

          <tbody>
            <% @accounts.each do |account| %>
              <tr>
                <td><%= t("activerecord.attributes.account.account_types.#{account.account_type}") %></td>
                <td><%= account.title %></td>
                <td><%= number_to_currency(account.value) %></td>
                <td><%= link_to '<i class="icon-search"></i>'.html_safe, account %></td>
                <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_account_path(account) %></td>
                <td><%= link_to '<i class="icon-trash"></i>'.html_safe, account, method: :delete, data: { confirm: t('helpers.are_you_sure') } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>
<%= link_to t('helpers.titles.new', model: t("activerecord.models.account.one")), new_account_path %>
