<%= render 'header' %>

<div class='box bordered-box green-border' style='margin-bottom:0;'>
  <div class='box-header green-background'>
    <div class='title'>
      <%= t('helpers.index') %>
    </div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='table' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>
                <%= Group.human_attribute_name("title") %>
              </th>
              <th>
                <%= Group.human_attribute_name("user") %>
              </th>
              <th colspan="3">
                <%= t('helpers.actions') %>
              </th>
            </tr>
          </thead>

          <tbody>
            <% @groups.each do |group| %>
              <tr>
                <td><%= group.title %></td>
                <td><%= group.user.name %></td>
                <td><%= link_to '<i class="icon-dollar"></i>'.html_safe, dashboard_group_path(group) %></td>
                <td><%= link_to '<i class="icon-search"></i>'.html_safe, group_user_groups_path(group) %></td>
                <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_group_path(group) %></td>
                <td><%= link_to '<i class="icon-trash"></i>'.html_safe, group, method: :delete, data: { confirm: t('helpers.are_you_sure') } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>
<%= link_to t('helpers.titles.new', model: t("activerecord.models.group.one")), new_group_path %>
