<%= render 'header' %>

<div class='box bordered-box green-border' style='margin-bottom:0;'>
  <div class='box-header green-background'>
    <div class='title'>Lista</div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='table' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>User</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @groups.each do |group| %>
              <tr>
                <td><%= group.title %></td>
                <td><%= group.description %></td>
                <td><%= group.user %></td>
                <td><%= link_to '<i class="icon-search"></i>'.html_safe, group %></td>
                <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_group_path(group) %></td>
                <td><%= link_to '<i class="icon-trash"></i>'.html_safe, group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>
<%= link_to 'New Group', new_group_path %>
