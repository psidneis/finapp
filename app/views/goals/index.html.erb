<%= render 'header' %>

<div class='box bordered-box green-border' style='margin-bottom:0;'>
  <div class='box-header green-background'>
    <div class='title'>Lista</div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='table' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>Value</th>
              <th>Category</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @goals.each do |goal| %>
              <tr>
                <td><%= goal.value %></td>
                <td><%= goal.category %></td>
                <td><%= link_to '<i class="icon-search"></i>'.html_safe, goal %></td>
                <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_goal_path(goal) %></td>
                <td><%= link_to '<i class="icon-trash"></i>'.html_safe, goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>
<%= link_to 'New Goal', new_goal_path %>
