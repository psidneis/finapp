<%= simple_form_for(@user_group) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :enabled %>
    <%= f.input :role, collection: options_for_enum(UserGroup, :role, @user_group) %>
    <%= f.association :group %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
